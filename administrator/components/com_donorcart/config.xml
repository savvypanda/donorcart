			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="jqueryui_version" type="list" default="0" label="COM_DONORCART_CONFIG_JAVASCRIPT_JQUERYUI_VERSION_LABEL" description="COM_DONORCART_CONFIG_JAVASCRIPT_JQUERYUI_VERSION_DESCRIPTION">
			<option value="0">None (loaded by another extension)</option>
			<option value="1.10.1">1.10.1</option>
			<option value="1.10.2">1.10.2</option>
			<option value="1.10.3">1.10.3</option>
			<option value="1.10.4">1.10.4</option>
		</field>
		<field name="jqueryui_theme" type="list" default="" label="COM_DONORCART_CONFIG_JAVASCRIPT_JQUERYUI_THEME_LABEL" description="COM_DONORCART_CONFIG_JAVASCRIPT_JQUERYUI_THEME_DESCRIPTION">
			<option value="">None (loaded by another extension)</option>
			<option value="black-tie">black-tie</option>
			<option value="blitzer">blitzer</option>
			<option value="cupertino">cupertino</option>
			<option value="dark-hive">dark-hive</option>
			<option value="dot-luv">dot-luv</option>
