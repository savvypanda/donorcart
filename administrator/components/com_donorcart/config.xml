<?xml version="1.0" encoding="UTF-8"?>
<config>
	<fieldset name="basic" label="COM_DONORCART_CONFIG_BASIC_LABEL" description="COM_DONORCART_CONFIG_BASIC_DESC">
		<field name="testmode" type="list" default="0" label="COM_DONORCART_CONFIG_BASIC_TESTMODE_LABEL" description="COM_DONORCART_CONFIG_BASIC_TESTMODE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="ssl_mode" type="list" default="0" label="COM_DONORCART_CONFIG_BASIC_SSLMODE_LABEL" description="COM_DONORCART_CONFIG_BASIC_SSLMODE_DESC">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
			<option value="2">COM_DONORCART_CONFIG_COMMON_REQUIRED</option>
		</field>
		<field name="admin_email" type="text" size="50" default="" label="COM_DONORCART_CONFIG_BASIC_ADMINEMAIL_LABEL" description="COM_DONORCART_CONFIG_BASIC_ADMINEMAIL_DESC" />
	</fieldset>
	<fieldset name="javascript" label="COM_DONORCART_CONFIG_JAVASCRIPT_LABEL" description="COM_DONORCART_CONFIG_JAVASCRIPT_DESC">
